----------------------------------------------------------------------------------------
*/

    //Mandatory options
    params.index_file = null //path/to/index_file
    params.output_dir = "resmobilys_output/" //output directory

    //Quality control
    params.trim_end_size = 0
    params.quality_trim = 10

    //Hybracter parameters
    params.read_min_length = 1000
    params.medaka = true
    params.flyeModel = "--nano-hq"

    //Tools parameters
    params.plasmid = "plasme"
    params.kraken_taxonomy = true
    params.kraken_index = "https://genome-idx.s3.amazonaws.com/kraken/k2_standard_08gb_20240904.tar.gz"
    params.rgi_include_nudge = true
    params.ice_avg_size = 80000
    params.compositeIS_size = 20000

    //Blast parameter for VF
    params.evalue_vf = 1e-03
    params.pident_vf = 80

    //default CPUs requirement for each process, expected to run on local computer with 20 cpus and 32 GB of ram. Adapt to suit your computational ressources.
    params.default_cpus = 4
    params.default_memory = 8.GB

    //CPUs to use for process high, expected to on local computer with 20 cpus and 32 GB of ram. If you have more resources (in HPC for example), you can set max_cpus=16 and max_memory=32.GB
    params.process_high_cpus = 8
    params.process_high_memory = 16.GB
