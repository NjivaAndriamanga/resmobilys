/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    waterisk Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Your personnal config file based on your environment and your input
----------------------------------------------------------------------------------------
*/

    //Mandatory options
    params.output_dir = "resmobilys_output/" //output directory
    params.index_file = "index_file.csv" //path/to/index_file

    //Quality control
    params.trim_end_size = 0
    params.quality_trim = 10
    params.lineage_db = "bacteria_odb10"

    //Hybracter parameters
    params.read_min_length = 1000
    params.medaka = true
    params.flyeModel = "--nano-hq"

    //Others and database
    params.plasmid = "plasme"
    params.kraken_taxonomy = true

    //Blast parameter for VF and ICE
    params.evalue_vf = 1e-03
    params.evalue_ice = 1e-03
    params.pident_vf = 80
    params.pident_ice = 80

    //rgi parameters
    params.rgi_include_nudge = true

    //Default ressources
    params.default_cpus = 2
    params.default_memory = 12.GB

    //max: expected to run on hpc. Expecting to be overwritten depending the profile
    params.max_cpus = 4
    params.max_memory = 12.GB


profiles {

    local {
        process {
            scratch = false
            executor = 'local'
            withLabel: 'process_medium' { 
                cpus = params.default_cpus
                memory = params.default_memory
            }
            withLabel: 'process_high' { //If you are running localy, change max_cpus and max_memory
                cpus = params.max_cpus
                memory = params.max_memory
            }
        }
    }
}
